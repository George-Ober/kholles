% Régularité
\newcommand{\regularite}[4]{\ensuremath{
	\mathcal{#1}^{#2}
	\notblank{#3}
		{
			\!
			\left(
			#3, 
			\notblank{#4}{#4}{\mathbb{R}}
			\right)
		}
		{}
}}
\newcommand{\Cont}[3]{\regularite{C}{#1}{#2}{#3}}
\newcommand{\Deriv}[3]{\regularite{D}{#1}{#2}{#3}}
